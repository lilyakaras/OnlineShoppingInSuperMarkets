@model OnlineShoppingInSupermarkets.Models.LoginModel
@{
    ViewData["Title"] = "Sign in";
}
<div class="container">
    <div class="row vertical-offset-100">
        <div class="col-md-4 col-md-offset-4">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Please sign in</h3>
                </div>
                <div class="panel-body">
                    <a asp-action="GoogleLogin" asp-controller="Account" class="btn google-btn btn-block"><span><i class="fab fa-google-plus-g"></i> Sign in with Google</span></a>
                    <p></p>
                    <p style="text-align:center">OR</p>
                    <form asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
                        <div class="validation text-danger" asp-validation-summary="ModelOnly"></div>
                        <fieldset>
                            <div class="form-group">
                                <input type="text" asp-for="Email" class="form-control" placeholder="E-mail">
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input type="password" asp-for="Password" value="" class="form-control" placeholder="Password">
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <input class="btn btn-success btn-block" type="submit" value="Sign in">
                            <hr />
                            <a asp-action="Register" asp-controller="Account" class="btn btn-primary btn-block">Sign up New Account</a>
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>